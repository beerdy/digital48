<p id="notice"><%= notice %></p>

<h1>Listing Certificates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slave</th>
      <th>Image uid</th>
      <th>Image name</th>
      <th>Url</th>
      <th>Sort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.title %></td>
        <td><%= certificate.description %></td>
        <td><%= certificate.slave %></td>
        <td><%= certificate.image_uid %></td>
        <td><%= certificate.image_name %></td>
        <td><%= certificate.url %></td>
        <td><%= certificate.sort %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

