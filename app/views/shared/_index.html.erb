<section id='aboutcompany' style="background-image: url(<%=@slogan.image.url if @slogan.image_stored?%>)">
  <div class="container margtop30 aboutcompany">
    <legend><h2 class="block-title">
      <span><b>О</b> Компании</span> <small><a href="/certificates">все сертификаты</a></small>
    </h2></legend>
    <%=@aboutcompany.slave.html_safe%>
    <%@cert_company.sort_by(&:sort).take(4).each do |cert| %>
      <div class="col-sm-3">
        <%= image_tag cert.image.url, class: 'img-responsive gallery-img', alt: cert.title if cert.image_stored? %>
      </div>
    <%end%>
    <div style="clear: both;padding-top: 24px;"></div>
    <%=@aboutcompany.description.html_safe%>
    <p>&nbsp</p>
  </div>
</section>


<section id='projects'>
  <div class="projects-block projects">
    <div class="container"><legend><h2 class="block-title">
      <span><b>Крупные</b> Проекты</span> <small><a href="/clients">реализованные проекты</a></small>
    </h2></legend></div>
    <div class="owl-carousel">
      <% Client.all.each do |client| %>
      <% if client.image_stored? %>
      <div class="owl-element">
        <div class="owl-paper">
          <div class="img-warp">
            <%= image_tag client.image.url, class: 'img-responsive', alt: 'title' %>
          </div>
          <div class="text-cap text-center"><span><%= client.slave %></span></div>
          <div class="btn-cap nice-buttons">
            <div class="buttons"><a class="btnn blue" onclick="return goTo('/projects/<%=client.id%>');">Подробнее</a></div>
          </div>
        </div>
      </div>
      <%end;end%>
    </div>
  </div>
</section>


<section id='utilize'>
  <div class="container margtop30">
    <legend><h2 class="block-title">
      <span><b>Программа</b> Утилизации</span> <small><a href="javascript:void(0);">утилизируем технику</a></small>
    </h2></legend>
    <%=@utilize.title.html_safe%>
    <div class="row ">
      <div class="col-md-6"><div class="utilize"><%=image_tag @utilize.image.url, class: 'img-responsive gallery-img', alt: @utilize.title %></div></div>
      <div class="col-md-6 nice-buttons">
        <div class="margtop70"><%=@utilize.description.html_safe%></div>
        <div class="buttons">
          <a class="btnn blue" onclick="return goTo('/pages/utilize');">Подробнее</a>
          <a class="btnn purple" onclick="return goTo('/prices/19');">Прайс-лист</a>
        </div>
      </div>
    </div>
  </div>
</section>

<section id='mainContact'>
  <div class="container margtop30">
    <legend><h2 class="block-title messages">
      <span><b>Наше</b> местоположение</span> <small><a href="/messages">реквизиты & схема проезда</a></small>
    </h2></legend>
  </div>
  <div class="embed-responsive map-heigth"><iframe class="embed-responsive-item" src="/slave/index"></iframe></div>
</section>

<section id='clients'>
  <div class="container margbottom30 margtop30">
    <legend><h2 class="block-title">
      <span><b>Наши</b> Клиенты</span> <small><a href="/reviews">мнения клиентов</a></small>
    </h2></legend>

    <!-- CARUSEL - Our Clients-->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="row item active container text-center">
        <% count = 0; Client.all.each do |client| %>
        <%= count>=4? (count=1;'</div><div class="row item container text-center">'.html_safe) : (count+=1;'') %>
          <%= image_tag client.image.url, alt: client.title, class: 'col-md-3 col-sm-3 img-responsive' %>
        <%end%>
        </div>
      </div>

      <div align="center" style="margin-top:20px;">
      <!-- Controls -->
        <a class="left" href="#carousel-example-generic" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right" href="#carousel-example-generic" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div><!-- // CARUSEL - Our Clients-->
  </div>
</section>
