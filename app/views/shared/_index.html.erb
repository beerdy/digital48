<% if request.user_agent =~ /Mobile|webOS/ %>

<div class="hero-mobile">
<%= image_tag @mobile_background.image.url, alt: @mobile_background.title, class: 'mobile_background img-responsive'  %>
</div>
<%else%>
<iframe id="myiFrame" src="/pages" style="border:0px;-webkit-overflow-scrolling: touch;overflow: auto; margin: 0px; padding: 0px; background-color: <%=@slogan.code%>" scrolling="no" width="100%"></iframe>
<div class="hero">
  <div class="logo-baner"><%= image_tag @logo_baner.image.url, alt: @logo_baner.title, class: 'img-responsive' %></div>
  <h1><span>Авторизированная сервисная компания</span><br>Мы ценим Ваше время</h1>
  <div class="inner text-center">
    <h1>
      <%= @slogan.description.html_safe %>
    </h1>
  </div>
</div><!-- // HEAD BANER -->
<%end%>
<hr style="border-bottom: 4px solid #47a3da;">


<section id="brands">
  <div class="container text-center">
    <h1>Главный авторизированный сервисный центр в Липецке</h1>
  </div>
  <div class="row">
    <% count = 0; @brands.each do |brand| %>
    <%= count>=3? (count=1;'</div><div class="row">'.html_safe) : (count+=1;'') %>
    <div class="col-md-4">
      <a href="<%=brand.url%>" target="_blank">
      <div class="brand-warpaper">
        <%= image_tag brand.image1.url, alt: brand.title, class:"img-responsive img-nocolor" if brand.image1_stored? %>
        <%= image_tag brand.image.url, alt: brand.title, class:"img-responsive img-color" if brand.image_stored? %>
      </div>
      </a>
    </div>
    <%end%>
  </div>
</section>

<section id="service">
  <div class="service"></div>
  <a href="http://digital48.ru/pages/chastpc#repair"></a>
  <div class="container-fluid">
    <% @count = 0; @master_group.each do |group1| %>
    <%= @count>=3? (@count=1;'</div><div class="row">'.html_safe) : (@count+=1;'') %>
    <div class="col-md-4">
      <div class="hblocks">
        <div><p><i class="fa fa-user" aria-hidden="true"></i><a href="/group1s/<%=group1.id%>"> <%=group1.title%></p></div>
        <ul>
          <% group1.group2.each do |group2|%>
          <a href="/group2s/<%=group2.id%>"><li><%=group2.title%></li></a>
          <%end%>
        </ul>
      </div>
    </div>
    <%end%>
  </div>  
</section>

<section id="flexSlider" class="margtop30">
        <div class="slider-container">
            <div class="slider">
                <div class="flexslider">
                    <ul class="slides">
                        <% Slider.all.each do |slide|%>
                        <li>
                            <%= image_tag slide.image.url if slide.image_stored? %>
                            <% if slide.description and slide.description != '' then %>
                              <div class="flex-caption">
                                <%=slide.description.html_safe%>
                              </div>
                            <%end%>
                        </li>
                        <%end%>
                    </ul>
                </div>
            </div>
        </div>
</section>

