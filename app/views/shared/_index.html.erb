<!-- HEAD BANER -->
<iframe id="myiFrame" src="/pages" style="border:0px;-webkit-overflow-scrolling: touch;overflow: auto; fub;" name="myiFrame" scrolling="no" frameborder="0" marginheight="0" marginwidth="0" height="551" width="100%" seamless=""></iframe>
<div class="hero">
  <h1><span>Авторизированная сервисная компания</span><br>Мы ценим Ваше время</h1>
  <div class="inner text-center">
    <h1>
      <%= @slogan.description.html_safe %>
    </h1>
  </div>
</div><!-- // HEAD BANER -->
<hr style="border-bottom: 4px solid #47a3da;">

<section id="sliderWrap">
  <div class="container ">
    <div id="metaslider" class="flexslider">
      <ul class="slides">
        <% Slider.all.each_with_index do |slide,index| %>
        <%== if index==0 then '<li class="flex-active-slide">' else '<li class="">' end %>
          <%= image_tag slide.image.url, alt: "slide1", class: "slider-38 slide-42", size: "1170x396", draggable: "true" %>
          <div class="caption-wrap">
            <div class="caption">
              <%= slide.description.html_safe %>
            </div>
          </div>
        </li>
        <%end%>
      </ul>
    </div>
  </div>
</section>

<section id="slogan">

</section>
<hr><br>
<section id="service">
  <div class="swrapper">
    <div class="shead sec01"><p>&nbsp&nbsp<i class="fa fa-laptop" aria-hidden="true"></i>&nbsp&nbsp&nbspНАШИ УСЛУГИ&nbsp&nbsp</p></div>
  </div>
  
  <div class="container-fluid">
    <% @count = 0; @master_group.each do |group1| %>
    <%= @count>=3? (@count=1;'</div><div class="row">'.html_safe) : (@count+=1;'') %>
    <div class="col-md-4">
      <div class="hblocks">
        <div><p><i class="fa fa-user" aria-hidden="true"></i><a href="/group1s/<%=group1.id%>"> <%=group1.title%></p></div>
        <ul>
          <% group1.group2.each do |group2|%>
          <a href="/group2s/<%=group2.id%>"><li><%=group2.title%></li></a>
          <%end%>
        </ul>
      </div>
    </div>
    <%end%>
  </div>  
</section>

<section id='utilize'>
  <div class="container margtop30">
    <legend><h2 class="block-title">
      <span><b>Программа</b> Утилизации</span> <small><a href="javascript:void(0);">утилизируем технику</a></small>
    </h2></legend>
    <%=@utilize.title.html_safe%>
    <div class="row margtop30">
      <div class="col-sm-6 utilize"><%=image_tag @utilize.image.url, class: 'img-responsive', alt: @utilize.title %></div>
      <div class="col-sm-6 nice-buttons">
        <div class="margtop70"><%=@utilize.description.html_safe%></div>
        <div class="buttons">
          <a class="btnn blue" onclick="return goTo('/pages/utilize');">Подробнее</a>
          <a class="btnn purple" onclick="return goTo('/prices/19');">Прайс-лист</a>
        </div>
      </div>
    </div>
  </div>
</section>



<section id='clients'>
  <div class="container margbottom30 margtop30">
    <legend><h2 class="block-title">
      <span><b>Мы</b> Работаем</span> <small><a href="#">Наши клиенты</a></small>
    </h2></legend>

    <!-- CARUSEL - Our Clients-->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="row item active container text-center">
        <% count = 0; Client.all.each do |client| %>
        <%= count>=4? (count=1;'</div><div class="row item container text-center">'.html_safe) : (count+=1;'') %>
          <%= image_tag client.image.url, alt: client.title, class: 'col-md-3 col-sm-3 img-responsive' %>
        <%end%>
        </div>
      </div>

      <div align="center" style="margin-top:20px;">
      <!-- Controls -->
        <a class="left" href="#carousel-example-generic" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right" href="#carousel-example-generic" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div><!-- // CARUSEL - Our Clients-->
  </div>
</section>
